@model List<MenuViewModel>

<h2>Lista dei Menu in programma quest'anno</h2>
<a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Inserisci un nuovo Menu</a> 
<table class="table table-hover table-dark table-bordered opacity-75">
    <thead>
        <tr>
            <th>Nome</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>
                    <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Visualizza i Piatti</a>
                </td>
            </tr>
        }
    </tbody>
</table>
